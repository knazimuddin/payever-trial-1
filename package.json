{
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "cli": "ts-node src/cli.ts",
    "cli:prod": "node dist/src/cli.js",
    "consume": "ts-node src/consumer.ts",
    "consume:prod": "node dist/src/consumer.js",
    "consumer": "nodemon --config nodemon-consumer.json",
    "consumer:debug": "nodemon --config nodemon-consumer-debug.json",
    "cucumber": "./node_modules/.bin/cucumber-js",
    "cucumber:all": "./node_modules/.bin/cucumber-js features/tests/",
    "cucumber:all:cov": "./node_modules/.bin/nyc --exclude-after-remap=false --reporter=text ./node_modules/.bin/cucumber-js features/tests/",
    "http": "nodemon --config nodemon-http.json",
    "http:debug": "nodemon --config nodemon-http-debug.json",
    "http:prod": "node dist/src/http.js",
    "lint": "pe-lint",
    "lint:fix": "pe-lint --fix",
    "migrations": "db-migrate",
    "migrations:prod": "db-migrate --migrations-dir=dist/migrations",
    "pre-commit": "npm run tslint:fix && npm run test && npm run e2e",
    "probe-mongo": "pe-probe-mongo",
    "test": "mocha -r ts-node/register --recursive ./tests/**/*.spec.ts",
    "test:integration": "cucumber-js",
    "test:pact": "mocha -r ts-node/register --recursive ./tests/**/*.spec.pact.ts --exit",
    "test:pact:can-i-deploy": "./node_modules/.bin/pact-broker can-i-deploy --pacticipant 'nodejs-backend-transactions' --latest --broker-base-url $PACT_BROKER_BASE_URL --broker-username $PACT_BROKER_USERNAME --broker-password $PACT_BROKER_PASSWORD",
    "test:pact:publish": "ts-node -r tsconfig-paths/register pact.publish.ts",
    "test:pact:verify": "mocha -r ts-node/register ./tests/contract/verify.ts --timeout 60000 --exit",
    "test:unit": "mocha -r ts-node/register --recursive ./tests/unit/**/*.spec.ts"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^6.8.2",
    "@pe/common-sdk": "^1.6.0",
    "@pe/nest-kit": "^4.19.17-beta",
    "@pe/notifications-sdk": "^3.6.0",
    "@types/mongoose": "5.5.20",
    "@types/node": "^11.11.6",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.5",
    "db-migrate-mongodb": "^1.5.0",
    "fastify-jwt": "^0.10.0",
    "fastify-swagger": "2.4.0",
    "lodash-es": "^4.17.11",
    "moment": "^2.24.0",
    "pdfmake": "^0.1.58",
    "php-serialize": "^2.1.0",
    "php-unserialize": "0.0.1",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.0.2",
    "uuid": "^3.3.2",
    "xlsx": "^0.15.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.8.3",
    "@pe/cucumber-sdk": "^0.10.4",
    "@pe/dev-kit": "^0.1.6",
    "@pe/pact-kit": "^0.3.0",
    "@types/mocha": "^5.2.6",
    "@types/sinon": "^7.5.0",
    "@types/sinon-chai": "^3.2.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "db-migrate-plugin-typescript": "^2.0.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.18.10",
    "sinon": "^7.4.1",
    "sinon-chai": "^3.3.0",
    "supertest": "^3.4.2",
    "ts-loader": "^4.5.0",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.14.0",
    "typescript": "^3.6.3"
  },
  "peerDependencies": {
    "class-validator": "*"
  }
}
